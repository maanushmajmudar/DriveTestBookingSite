<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <!-- Navigation-->
    <%- include('../public/common/layout_nav') %>
    <main class="container mt-4">
      <h1>Driver Details</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Car Make</th>
            <th scope="col">Car Model</th>
            <th scope="col">Car Year</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= user.firstname + " " + user.lastname%></td>
            <td><%= user.Age%></td>
            <td><%= user.car_details.make %></td>
            <td><%= user.car_details.model%></td>
            <td><%= user.car_details.year %></td>
          </tr>
        </tbody>
      </table>
      <form
        class="gform"
        action="/update/user/detalis/<%= user._id %>"
        method="POST"
      >
        <div class="mt-4">
          <label class="form-label">Enter Notes:</label>
          <textarea
            class="form-control"
            name="comment"
            id="comment"
            rows="4"
          ></textarea>
        </div>
        <div class="mt-4">
          <label class="form-label">Select Result:</label>
          <select class="form-select" id="result" name="result">
            <option value="Fail">Fail</option>
            <option value="Pass">Pass</option>
          </select>
        </div>
        <div class="formgroup">
          <button type="submit" id="updateButton">Update</button>
        </div>
      </form>
    </main>
    <!-- footer -->
    <%- include('../public/common/layout_footer') %>
  </body>
</html>
